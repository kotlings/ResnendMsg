<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
	
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="28.5dp"
			android:orientation="vertical"
			android:paddingLeft="25dp"
			android:paddingRight="25dp">
		
		
		<com.wyn88.resend.weight.ClearableEditText
				android:id="@+id/edtPhone"
				android:layout_width="match_parent"
				android:layout_height="44dp"
				android:layout_marginLeft="15dp"
				android:background="@color/transparent"
				android:gravity="start|center_vertical"
				android:hint="请输入手机号"
				android:inputType="number"
				android:textColor="@color/app_black"
				android:textColorHint="@color/front_hint_gray"
				android:textSize="14sp"
				app:clearDrawable="@mipmap/clear_icon"/>
		
		<View
				android:layout_width="match_parent"
				android:layout_height="0.6dp"
				android:background="@color/gray_e1e1"/>
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
			
			<com.wyn88.resend.weight.ClearableEditText
					android:id="@+id/edtCode"
					android:layout_width="0dp"
					android:layout_height="55dp"
					android:layout_marginLeft="15dp"
					android:layout_weight="1"
					android:background="@color/transparent"
					android:gravity="start|center_vertical"
					android:hint="请输入验证码"
					android:inputType="number"
					android:textColor="@color/app_black"
					android:textColorHint="@color/front_hint_gray"
					android:textSize="14sp"
					app:clearDrawable="@mipmap/clear_icon"/>
			
			
			<TextView
					android:id="@+id/tvResend"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginTop="13.5dp"
					android:layout_marginBottom="13.5dp"
					android:background="@drawable/bg_btn_gray_full_14_shape"
					android:gravity="center"
					android:onClick="onClick"
					android:paddingLeft="12.5dp"
					android:paddingRight="12.5dp"
					android:text="获取验证码"
					android:textColor="@color/app_white"
					android:textSize="13sp"/>
		</LinearLayout>
		
		<View
				android:layout_width="match_parent"
				android:layout_height="0.6dp"
				android:background="@color/gray_e1e1"/>
	
	
	</LinearLayout>
	
	<TextView
			android:id="@+id/tvNext"
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:layout_marginLeft="25dp"
			android:layout_marginTop="41dp"
			android:layout_marginRight="25dp"
			android:layout_marginBottom="20dp"
			android:background="@drawable/bg_btn_gray_full_14_shape"
			android:clickable="true"
			android:gravity="center"
			android:onClick="onClick"
			android:paddingTop="8.0dip"
			android:paddingBottom="8.0dip"
			android:text="绑定"
			android:textColor="@color/app_white"
			android:textSize="16dp"/>


</LinearLayout>