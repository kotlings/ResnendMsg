<resources>
	
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>
	
	
	<declare-styleable name="RotateImageView">
		<attr name="rounded" format="boolean"/>
		<attr name="interval_degree" format="float"/>
		<attr name="interval_time" format="integer"/>
		<attr name="during" format="integer"/>
		<attr name="is_clockwise" format="boolean"/>
	</declare-styleable>
	
	
	<style name="SimpleDialog" parent="@style/Theme.AppCompat">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="colorPrimary">@android:color/black</item>
		<item name="colorPrimaryDark">@android:color/transparent</item>
		<item name="colorAccent">@android:color/black</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColorHint">@color/front_hint_gray</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">true</item>
	</style>

</resources>
